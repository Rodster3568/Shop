@model IEnumerable<Shop.Models.Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список категорий</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary" style="float: right;">
                <i class="fas fa-plus"></i> &nbsp; Создать новую категорию
            </a>
        </div>
    </div>


    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
            <tr>
                    <th class="text-center">
                    Название категории
                </th>
                <th class="text-center">
                    Порядок отображения
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                        <td width="50%" class="text-center align-middle">@obj.Name</td>
                        <td width="30%" class="text-center align-middle">@obj.DisplayOrder</td>
                    <td class="text-left">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i> Редактировать
                            </a>
                            <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="far fa-trash-alt"></i> Удалить
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p> Категории не существует.</p>
    }

</div>
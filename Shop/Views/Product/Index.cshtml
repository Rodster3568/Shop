@model IEnumerable<Shop.Models.Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список товаров</h2>
        </div>
        <div class="col-6">
            <a asp-action="Upsert" class="btn btn-primary" style="float: right;">
                <i class="fas fa-plus"></i> &nbsp; Добавить новый товар
            </a>
        </div>
    </div>


    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th class="text-center">
                        Название товара
                    </th>
                    <th class="text-center">
                        Стоимость
                    </th>
                    <th class="text-center">
                        Категория
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="40%" class="text-center align-middle">@obj.Name</td>
                        <td width="20%" class="text-center align-middle">@obj.Price</td>
                        <td width="20%" class="text-center align-middle">@obj.Category.Name</td>
                        <td class="text-left">
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i> Редактировать
                                </a>
                                <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="far fa-trash-alt"></i> Удалить
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> Товары отсутствуют.</p>
    }

</div>